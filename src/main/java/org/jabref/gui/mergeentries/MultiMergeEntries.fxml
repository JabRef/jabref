<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Control?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<DialogPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.jabref.gui.mergeentries.MultiMergeEntriesView"
            prefHeight="500.0" prefWidth="800.0">

    <content>
        <SplitPane dividerPositions="0.1, 0.6, 0.3">
            <VBox>
                <Label text="Supplier" prefHeight="${topScrollPane.height}" VBox.vgrow="NEVER">
                    <minHeight><Control fx:constant="USE_PREF_SIZE" /></minHeight>
                    <maxHeight><Control fx:constant="USE_PREF_SIZE" /></maxHeight>
                </Label>
                <ScrollPane fx:id="leftScrollPane" hbarPolicy="NEVER" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                    <VBox fx:id="fieldHeader"/>
                </ScrollPane>
            </VBox>
            <VBox>
                <ScrollPane fx:id="topScrollPane" hbarPolicy="NEVER" vbarPolicy="NEVER" VBox.vgrow="NEVER">
                    <HBox fx:id="supplierHeader" />
                </ScrollPane>
                <ScrollPane fx:id="centerScrollPane" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                    <GridPane fx:id="optionsGrid" />
                </ScrollPane>
            </VBox>
            <VBox>
                <Label text="Entry" prefHeight="${topScrollPane.height}" VBox.vgrow="NEVER">
                    <minHeight><Control fx:constant="USE_PREF_SIZE" /></minHeight>
                    <maxHeight><Control fx:constant="USE_PREF_SIZE" /></maxHeight>
                </Label>
                <ScrollPane fx:id="rightScrollPane" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                    <VBox fx:id="fieldEditor"/>
                </ScrollPane>
            </VBox>
        </SplitPane>
    </content>
</DialogPane>
