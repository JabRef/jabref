<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import org.jabref.gui.icon.JabRefIconView?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
         fx:controller="org.jabref.gui.welcome.components.QuickSettings"
         styleClass="welcome-content-column">
    <Label styleClass="welcome-header-label" text="%Quick settings"/>
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                styleClass="quick-settings-scroll-pane">
        <VBox styleClass="quick-settings-container">
            <Button fx:id="mainFileDirButton" styleClass="quick-settings-button"
                    maxWidth="Infinity" text="%Set main file directory"
                    onAction="#showMainFileDirectoryDialog">
                <graphic>
                    <JabRefIconView glyph="FOLDER"/>
                </graphic>
            </Button>

            <Button fx:id="themeButton" styleClass="quick-settings-button"
                    maxWidth="Infinity" text="%Change visual theme"
                    onAction="#showThemeDialog">
                <graphic>
                    <JabRefIconView glyph="PREFERENCES"/>
                </graphic>
            </Button>

            <Button fx:id="largeLibraryButton" styleClass="quick-settings-button"
                    maxWidth="Infinity" text="%Optimize for large libraries"
                    onAction="#showLargeLibraryOptimizationDialog">
                <graphic>
                    <JabRefIconView glyph="SELECTORS"/>
                </graphic>
            </Button>

            <Button fx:id="pushApplicationButton" styleClass="quick-settings-button"
                    maxWidth="Infinity" text="%Configure push to applications"
                    onAction="#showPushApplicationConfigurationDialog">
                <graphic>
                    <JabRefIconView glyph="APPLICATION_GENERIC"/>
                </graphic>
            </Button>

            <Button fx:id="onlineServicesButton" styleClass="quick-settings-button"
                    maxWidth="Infinity" text="%Configure web search services"
                    onAction="#showOnlineServicesConfigurationDialog">
                <graphic>
                    <JabRefIconView glyph="WWW"/>
                </graphic>
            </Button>

            <Button fx:id="entryTableButton" styleClass="quick-settings-button"
                    maxWidth="Infinity" text="%Customize entry table"
                    onAction="#showEntryTableConfigurationDialog">
                <graphic>
                    <JabRefIconView glyph="TOGGLE_GROUPS"/>
                </graphic>
            </Button>
        </VBox>
    </ScrollPane>
</fx:root>
