<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.jabref.gui.libraryproperties.git.GitPropertiesView"
      styleClass="propertiesTab" spacing="20">

    <children>
        <VBox spacing="10">
            <Label text="Git Automation" styleClass="sectionHeader"/>
            <CheckBox fx:id="autoCommitCheckBox" text="Automatically commit when library is saved"/>
            <CheckBox fx:id="autoPushCheckBox" text="Automatically push changes after committing"/>
        </VBox>
    </children>
</VBox>
