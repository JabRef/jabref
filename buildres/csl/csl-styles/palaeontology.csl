    <author>
      <name>Benjamin C. Moon</name>
      <email>benjamin.moon@bristol.ac.uk</email>
    </author>
    <contributor>
      <name>Martin R. Smith</name>
      <email>martins@gmail.com</email>
      <uri>https://community.dur.ac.uk/martin.smith/</uri>
    </contributor>
