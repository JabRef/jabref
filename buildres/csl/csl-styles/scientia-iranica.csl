<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" demote-non-dropping-particle="sort-only" version="1.0" class="in-text" default-locale="en-US">
  <info>
    <title>Scientia Iranica</title>
    <id>http://www.zotero.org/styles/scientia-iranica</id>
    <link href="http://www.zotero.org/styles/scientia-iranica" rel="self"/>
    <link href="http://www.zotero.org/styles/the-optical-society" rel="template"/>
    <link href="http://scientiairanica.sharif.edu/journal/authors.note" rel="documentation"/>
    <author>
      <name>Sayyed Mohsen Vazirizade</name>
      <email>smvazirizade@email.arizona.edu</email>
    </author>
    <category citation-format="numeric"/>
    <category field="science"/>
    <category field="engineering"/>
    <issn>1026-3098</issn>
    <eissn>2345-3605</eissn>
    <summary>Common style use by Scientia Iranica</summary>
    <updated>2019-01-17T02:53:15+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <locale>
    <style-options punctuation-in-quote="false"/>
    <terms>
      <term name="edition" form="short">edn.</term>
    </terms>
  </locale>
  <macro name="author">
    <names variable="author">
      <name and="text" delimiter=", " initialize-with=". " name-as-sort-order="all"/>
      <label prefix=", " form="short" text-case="capitalize-first"/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
      </substitute>
    </names>
  </macro>
  <macro name="editor">
    <names variable="editor">
      <name and="text" delimiter=", " initialize-with=". "/>
      <label prefix=", " form="short" text-case="capitalize-first"/>
    </names>
  </macro>
  <macro name="year-date">
    <choose>
      <if variable="issued">
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </if>
      <else>
        <text form="short" term="no date"/>
      </else>
    </choose>
  </macro>
  <macro name="day-date">
    <choose>
      <if variable="issued">
        <date variable="issued">
          <date-part name="month" form="long" suffix=" "/>
          <date-part name="day" suffix=", "/>
          <date-part name="year"/>
        </date>
      </if>
      <else>
        <text form="short" term="no date"/>
      </else>
    </choose>
  </macro>
  <macro name="publisher">
    <group delimiter=", ">
      <text variable="publisher"/>
      <text variable="publisher-place"/>
    </group>
  </macro>
  <macro name="volume">
    <text variable="volume" font-weight="bold"/>
    <number prefix="(" suffix=")" variable="issue"/>
  </macro>
  <macro name="pages">
    <group delimiter=" ">
      <label variable="page" form="short"/>
      <text variable="page"/>
    </group>
  </macro>
  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <group delimiter=" ">
          <number variable="edition" form="ordinal"/>
          <text form="short" term="edition" text-case="capitalize-first"/>
        </group>
      </if>
      <else>
        <text variable="edition"/>
      </else>
    </choose>
  </macro>
  <macro name="series">
    <group delimiter=" ">
      <text variable="collection-title" text-case="title"/>
      <text variable="collection-number" prefix="No. "/>
    </group>
  </macro>
  <macro name="personal-communication">
    <group prefix="personal communication (" suffix=")">
      <text macro="day-date"/>
    </group>
  </macro>
  <macro name="patent-authority-number">
    <choose>
      <if variable="authority">
        <group>
          <text variable="authority" suffix=" patent "/>
          <text variable="number"/>
        </group>
      </if>
      <else>
        <group>
          <text variable="number" prefix="U.S. patent "/>
        </group>
      </else>
    </choose>
  </macro>
  <citation collapse="citation-number">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout delimiter="," prefix="[" suffix="]">
      <text variable="citation-number"/>
    </layout>
  </citation>
  <bibliography second-field-align="flush" entry-spacing="0">
    <layout suffix=".">
      <text variable="citation-number" suffix=". "/>
      <text macro="author" suffix=", "/>
      <choose>
        <if match="any" type="bill book graphic legal_case legislation motion_picture report song">
          <group delimiter=" ">
            <group delimiter=", ">
              <text variable="title" text-case="title" font-style="italic"/>
              <text macro="edition"/>
              <text macro="series"/>
              <text macro="publisher"/>
            </group>
            <text macro="year-date" prefix="(" suffix=")"/>
          </group>
        </if>
        <else-if type="paper-conference">
          <group delimiter=", ">
            <text variable="title" quotes="true"/>
            <text variable="container-title" form="short" text-case="title" font-style="italic"/>
            <text macro="editor"/>
            <text macro="series"/>
            <text macro="publisher"/>
            <text macro="pages"/>
          </group>
          <text macro="year-date" prefix=" (" suffix=")"/>
        </else-if>
        <else-if type="speech">
          <group delimiter=", ">
            <text variable="title" quotes="true"/>
            <text variable="event" prefix=" presented at " form="long" text-case="title"/>
            <text variable="event-place" text-case="title"/>
          </group>
          <text prefix=" (" suffix=")" macro="day-date"/>
        </else-if>
        <else-if match="any" type="chapter">
          <group delimiter=", ">
            <text variable="title" quotes="true"/>
            <group delimiter=" ">
              <text term="in" text-case="capitalize-first"/>
              <text variable="container-title" form="long" text-case="title" font-style="italic"/>
            </group>
            <text macro="editor"/>
            <text macro="edition"/>
            <text macro="series"/>
            <text macro="publisher"/>
            <text macro="volume"/>
            <text macro="pages"/>
          </group>
          <text prefix=" (" suffix=")" macro="day-date"/>
        </else-if>
        <else-if type="patent">
          <text variable="title" quotes="true" suffix=", "/>
          <group delimiter=" ">
            <text macro="patent-authority-number"/>
            <text prefix=" (" suffix=")" macro="day-date"/>
          </group>
        </else-if>
        <else-if type="thesis">
          <text variable="title" quotes="true" suffix=", "/>
          <group delimiter=", ">
            <text variable="genre"/>
            <text variable="publisher"/>
          </group>
          <text prefix=" (" suffix=")" macro="year-date"/>
        </else-if>
        <else-if type="webpage">
          <text variable="title" quotes="true" suffix=", "/>
          <text variable="URL"/>
        </else-if>
        <else-if type="personal_communication">
          <text macro="personal-communication"/>
        </else-if>
        <else-if type="article-newspaper">
          <text variable="title" quotes="true" suffix=", "/>
          <text variable="container-title" form="long"/>
          <text prefix=" (" suffix=")" macro="day-date"/>
        </else-if>
        <else-if type="report">
          <group delimiter=", ">
            <text variable="title" quotes="true"/>
            <text variable="genre"/>
            <text variable="number"/>
            <text macro="publisher"/>
          </group>
          <text macro="year-date" prefix=" (" suffix=")"/>
        </else-if>
        <else>
          <group delimiter=", ">
            <text variable="title" quotes="true"/>
            <text variable="container-title" form="short" font-style="italic"/>
            <text macro="volume"/>
            <text macro="pages"/>
          </group>
          <text prefix=" (" suffix=")" macro="year-date"/>
        </else>
      </choose>
    </layout>
  </bibliography>
</style>
