  </info>
  <locale xml:lang="pt-PT">
    <terms>
      <term name="container-author" form="short">
        <single>ed.</single>
        <multiple>eds.</multiple>
      </term>
      <term name="collection-editor" form="short">
        <single>ed.</single>
        <multiple>eds.</multiple>
      </term>
    </terms>
  </locale>
  <macro name="container-contributors">
    <choose>
      <if type="chapter paper-conference" match="any">
        <names variable="container-author" delimiter=", ">
          <name name-as-sort-order="all" sort-separator=", " initialize="false" initialize-with=". " delimiter="; " delimiter-precedes-last="always">
            <name-part name="family" text-case="uppercase"/>
            <name-part name="given" text-case="uppercase"/>
          </name>
          <et-al font-style="italic"/>
          <label form="short" prefix=" (" suffix=".) -" text-case="capitalize-first"/>
          <substitute>
            <names variable="editor"/>
            <names variable="collection-editor"/>
          </substitute>
        </names>
      </if>
      <else-if type="patent">
        <names variable="container-author" delimiter=", ">
          <name name-as-sort-order="all" sort-separator=", " initialize="false" initialize-with=". " delimiter="; " delimiter-precedes-last="always">
            <name-part name="family"/>
            <name-part name="given"/>
          </name>
          <et-al font-style="italic"/>
          <substitute>
            <names variable="editor"/>
            <names variable="collection-editor"/>
          </substitute>
        </names>
      </else-if>
    </choose>
  </macro>
  <macro name="secondary-contributors">
    <choose>
      <if type="chapter paper-conference patent" match="none">
        <names variable="editor" delimiter=", " prefix=" (" suffix=")">
          <name and="symbol" initialize="false" initialize-with=". " delimiter=", "/>
          <label form="short" prefix=", " text-case="capitalize-first" suffix="."/>
        </names>
      </if>
    </choose>
  </macro>
  <macro name="translator">
    <text value="Trad. "/>
    <names variable="translator" delimiter=", ">
      <name delimiter="; " sort-separator=" " delimiter-precedes-last="always">
        <name-part name="given" text-case="capitalize-first"/>
        <name-part name="family" text-case="capitalize-first"/>
      </name>
      <et-al font-style="italic"/>
    </names>
  </macro>
  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="all" sort-separator=", " initialize="false" initialize-with=". " delimiter="; " delimiter-precedes-last="always">
        <name-part name="family" text-case="uppercase"/>
        <name-part name="given" text-case="capitalize-all"/>
      </name>
      <et-al font-style="italic"/>
      <label form="short" prefix=" (" suffix=".)" text-case="uppercase"/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <text macro="title"/>
      </substitute>
    </names>
  </macro>
  <macro name="author-short">
    <names variable="author">
      <name form="short" name-as-sort-order="all" sort-separator=", " and="text" initialize="false" initialize-with=". " delimiter=", " delimiter-precedes-last="never"/>
      <et-al font-style="italic"/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <choose>
          <if type="bill book graphic legal_case legislation motion_picture song patent" match="any">
            <text variable="title" form="short" font-style="italic" font-weight="normal"/>
          </if>
          <else>
            <text variable="title" form="short" quotes="false" font-style="italic"/>
          </else>
        </choose>
      </substitute>
    </names>
  </macro>
  <macro name="medium">
    <choose>
      <if variable="URL" match="any">
        <text value="[Em linha]" prefix=" "/>
      </if>
      <else>
        <text value=""/>
      </else>
    </choose>
  </macro>
  <macro name="access">
    <date variable="accessed" prefix="[Consult. ">
      <date-part name="day" suffix=" "/>
      <date-part name="month" form="short" suffix=". " text-case="lowercase"/>
      <date-part name="year" suffix="]. "/>
    </date>
    <text variable="URL" prefix="Disponível em WWW:&lt;URL:" suffix="&gt;."/>
  </macro>
  <macro name="title">
    <group>
      <choose>
        <if type="book manuscript patent thesis webpage report" match="any">
          <text variable="title" form="long" font-weight="bold"/>
        </if>
        <else>
          <text variable="title" font-style="normal"/>
        </else>
      </choose>
    </group>
  </macro>
  <macro name="container-title">
    <group>
      <choose>
        <if type="article-magazine article-newspaper article-journal chapter entry-dictionary paper-conference article bill legislation" match="any">
          <text variable="container-title" form="long" font-weight="bold"/>
        </if>
        <else>
          <text variable="container-title" font-style="normal"/>
        </else>
      </choose>
    </group>
  </macro>
  <macro name="publisher">
    <choose>
      <if match="any" variable="publisher-place publisher">
        <choose>
          <if variable="publisher-place">
            <text variable="publisher-place" suffix=" : "/>
          </if>
          <else>
            <text value="[S.l.] " suffix=" : "/>
          </else>
        </choose>
        <choose>
          <if variable="publisher">
            <text variable="publisher" suffix=", "/>
            <text macro="issued"/>
          </if>
          <else>
            <text value="[s.n.]"/>
          </else>
        </choose>
      </if>
    </choose>
  </macro>
  <macro name="issued">
    <choose>
      <if variable="issued" match="any">
        <group>
          <choose>
            <if type="book chapter webpage" match="none">
              <date variable="issued">
                <date-part name="day" suffix=" "/>
                <date-part name="month" form="short" suffix=" "/>
              </date>
            </if>
          </choose>
          <date variable="issued">
            <date-part name="year"/>
          </date>
        </group>
      </if>
      <else>
        <text value="[s.d.]"/>
      </else>
    </choose>
  </macro>
  <macro name="issued-year">
    <choose>
      <if variable="issued" match="any">
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </if>
      <else>
        <text value="[s.d.]"/>
      </else>
    </choose>
  </macro>
  <macro name="edition">
    <choose>
      <if type="book chapter" match="any">
        <choose>
          <if is-numeric="edition">
            <group delimiter=" ">
              <number variable="edition" form="numeric" suffix="."/>
              <text term="edition" form="short" suffix="."/>
            </group>
          </if>
          <else>
            <text variable="edition" suffix=" ed."/>
          </else>
        </choose>
      </if>
    </choose>
  </macro>
  <macro name="locators">
    <choose>
      <if type="bill legislation" match="any">
        <group>
          <text variable="number" prefix=". " suffix=" "/>
          <date variable="issued">
            <date-part name="year" form="short" prefix=" (" suffix="-"/>
            <date-part name="month" form="numeric-leading-zeros" text-case="lowercase" suffix="-"/>
            <date-part name="day" form="numeric-leading-zeros" suffix=") "/>
          </date>
          <text variable="section" prefix="Sec. "/>
          <text variable="page" prefix=" " suffix="."/>
        </group>
      </if>
      <else-if type="patent">
        <group>
          <date variable="issued">
            <date-part name="day" prefix=". " suffix=" "/>
            <date-part name="month" form="short" suffix=". " text-case="lowercase"/>
            <date-part name="year" suffix=", "/>
          </date>
          <text variable="page" prefix=" " suffix=" p."/>
        </group>
      </else-if>
      <else-if match="any" type="article-journal article article-magazine">
        <text variable="volume" prefix=" " suffix=":"/>
        <text variable="issue" suffix=" ("/>
        <text suffix=")" macro="issued-year"/>
        <text variable="page" prefix=" "/>
      </else-if>
      <else-if match="any" type="chapter">
        <text variable="volume" prefix="v. "/>
        <text variable="page" prefix=". p. "/>
      </else-if>
      <else-if type="book" match="any">
        <text variable="page" prefix=". " suffix=" p."/>
      </else-if>
      <else-if type="thesis" match="any">
        <text variable="page" prefix=". " suffix=" f."/>
      </else-if>
      <else-if type="report" match="any">
        <text variable="number" prefix=" (Relatório n." suffix=")."/>
      </else-if>
      <else-if type="article-newspaper" match="any">
        <date variable="issued" prefix=" (" suffix="). " delimiter=" ">
          <date-part name="day"/>
          <date-part name="month" form="short" suffix="." text-case="lowercase"/>
          <date-part name="year"/>
        </date>
        <text variable="volume" suffix=":"/>
        <text variable="issue"/>
        <text variable="page" prefix=" "/>
      </else-if>
      <else-if type="webpage" match="any">
        <date variable="issued" prefix=", atual. ">
          <date-part name="day" suffix=" "/>
          <date-part name="month" form="short" suffix=". " text-case="lowercase"/>
          <date-part name="year" suffix=". "/>
        </date>
      </else-if>
    </choose>
  </macro>
  <macro name="ISBN">
    <group>
      <text variable="ISBN" prefix=". ISBN "/>
    </group>
  </macro>
  <citation et-al-min="4" et-al-use-first="1" collapse="year">
    <sort>
      <key macro="author"/>
      <key variable="issued"/>
    </sort>
    <layout prefix="(" suffix=")" delimiter="; ">
      <group>
        <text suffix=", " macro="author-short"/>
        <text macro="issued-year"/>
        <text prefix=", " macro="citation-locator"/>
      </group>
    </layout>
  </citation>
  <bibliography hanging-indent="false" et-al-min="4" et-al-use-first="1" entry-spacing="0">
    <sort>
      <key macro="author"/>
      <key variable="issued"/>
    </sort>
    <layout>
      <choose>
        <if type="bill legislation" match="any">
          <group>
            <text variable="title" suffix=". "/>
            <text variable="collection-title" suffix=". "/>
            <text macro="container-title"/>
            <text macro="container-contributors" suffix=". "/>
            <text macro="medium"/>
            <text macro="locators" suffix=" "/>
            <text macro="access"/>
          </group>
        </if>
        <else-if type="map">
          <group>
            <text macro="author" suffix=" - "/>
            <text macro="title"/>
            <text macro="medium"/>
            <text macro="edition" prefix=". "/>
            <text macro="locators"/>
            <text macro="access" prefix=" "/>
            <text variable="note" suffix=". "/>
          </group>
        </else-if>
        <else-if type="book">
          <group>
            <text macro="author" suffix=" - "/>
            <text macro="title"/>
            <text variable="collection-title" suffix=". "/>
            <text macro="medium"/>
            <text macro="edition" prefix=". "/>
            <text macro="publisher" prefix=". "/>
            <text macro="locators"/>
            <text macro="access" prefix=" "/>
            <text macro="ISBN" suffix=". "/>
          </group>
        </else-if>
        <else-if type="chapter paper-conference entry-dictionary entry-encyclopedia" match="any">
          <group>
            <text macro="author" suffix=" - "/>
            <text variable="title" suffix=". "/>
            <text macro="secondary-contributors" suffix=". "/>
            <text term="in" text-case="capitalize-first" suffix=" "/>
            <text macro="container-contributors" suffix=" "/>
            <text macro="translator" suffix=" "/>
            <text macro="container-title"/>
            <text variable="collection-title" suffix=". "/>
            <text macro="medium"/>
            <text macro="edition" prefix=". "/>
            <text macro="publisher" prefix=". "/>
            <text macro="access" prefix=" "/>
            <text macro="ISBN"/>
            <text macro="locators" suffix="."/>
          </group>
        </else-if>
        <else-if type="article-journal article" match="any">
          <group>
            <text macro="author" suffix=" - "/>
            <text variable="title" suffix=". "/>
            <text variable="collection-title" suffix=". "/>
            <text macro="container-title" suffix=". "/>
            <text variable="publisher-place" suffix=". "/>
            <text macro="ISSN" suffix=". "/>
            <text macro="locators" suffix=". "/>
            <text variable="DOI" prefix="doi: " suffix="."/>
          </group>
        </else-if>
        <else-if type="article-magazine" match="any">
          <group>
            <text macro="author" suffix=" - "/>
            <text variable="title" suffix=". "/>
            <text macro="container-title" suffix=". "/>
            <text variable="collection-title" suffix=". "/>
            <text variable="publisher-place" suffix=". "/>
            <text macro="medium"/>
            <text macro="locators" suffix="."/>
            <text macro="access" prefix=". "/>
            <text macro="ISSN" suffix="."/>
          </group>
        </else-if>
        <else-if type="article-newspaper" match="any">
          <group>
            <text macro="author" suffix=" - "/>
            <text variable="title" suffix=". "/>
            <text variable="collection-title" suffix=". "/>
            <text macro="container-title" suffix=". "/>
            <text macro="medium"/>
            <text macro="ISSN" suffix=" "/>
            <text macro="locators" suffix="."/>
            <text macro="access" prefix=" "/>
          </group>
        </else-if>
        <else-if type="thesis">
          <group>
            <text macro="author" suffix=" - "/>
            <text macro="title"/>
            <text variable="collection-title" suffix=". "/>
            <text macro="medium"/>
            <text macro="publisher" prefix=". "/>
            <text macro="locators"/>
            <text macro="access" prefix=" "/>
            <text variable="genre" prefix=" " suffix="."/>
          </group>
        </else-if>
        <else-if type="manuscript">
          <group>
            <text macro="author" suffix=" - "/>
            <text macro="title"/>
            <text variable="collection-title" suffix=". "/>
            <text macro="medium"/>
            <text macro="publisher" prefix=". "/>
            <text macro="locators"/>
            <text macro="access" prefix=" "/>
            <text macro="archive" suffix=". "/>
          </group>
        </else-if>
        <else-if type="webpage">
          <group>
            <text macro="author" suffix=" - "/>
            <text macro="title"/>
            <text variable="collection-title" suffix=". "/>
            <text macro="medium"/>
            <text macro="publisher" prefix=". "/>
            <text macro="locators"/>
            <text macro="access" prefix=" "/>
          </group>
        </else-if>
        <else-if type="report">
          <group>
            <text macro="author" suffix=" - "/>
            <text macro="title"/>
            <text variable="collection-title" suffix=". "/>
            <text macro="medium"/>
            <text macro="edition" prefix=". "/>
            <text macro="publisher" prefix=". "/>
            <text macro="locators"/>
            <text macro="access" prefix=" "/>
          </group>
        </else-if>
        <else-if type="patent">
          <group>
            <text macro="container-contributors" suffix=" - "/>
            <text macro="title" suffix=". "/>
            <text variable="collection-title" suffix=". "/>
            <text macro="author" suffix=". "/>
            <text variable="publisher-place" suffix=" "/>
            <text variable="number" prefix="patente "/>
            <text macro="locators"/>
            <text macro="access" prefix=" "/>
          </group>
        </else-if>
        <else>
          <text macro="author" suffix=" - "/>
          <text macro="title"/>
          <text macro="container-contributors"/>
          <text macro="secondary-contributors"/>
          <text macro="container-title"/>
          <text variable="collection-title" prefix=": " suffix="."/>
          <text macro="locators"/>
          <text variable="publisher-place"/>
          <text variable="publisher" suffix=", "/>
          <text macro="issued" prefix=", " suffix=". "/>
          <text macro="access"/>
        </else>
      </choose>
    </layout>
  </bibliography>
  <macro name="citation-locator">
    <group>
      <label variable="locator" form="short"/>
      <text variable="locator" prefix=" "/>
    </group>
  </macro>
  <macro name="ISSN">
    <group>
      <text variable="ISSN" prefix=". ISSN "/>
    </group>
  </macro>
  <macro name="archive">
    <group>
      <text variable="archive" prefix=" "/>
    </group>
  </macro>
</style>
