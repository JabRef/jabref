<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" demote-non-dropping-particle="sort-only" default-locale="en-US">
  <info>
    <title>AMBIO</title>
    <id>http://www.zotero.org/styles/ambio</id>
    <link href="http://www.zotero.org/styles/ambio" rel="self"/>
    <link href="http://www.zotero.org/styles/springer-humanities-author-date" rel="template"/>
    <link href="http://www.springer.com/cda/content/document/cda_downloaddocument/Instructions_for_authors_AMBIO_2013.pdf" rel="documentation"/>
    <author>
      <name>Sebastian Karcher</name>
    </author>
    <category citation-format="author-date"/>
    <category field="biology"/>
    <issn>0044-7447</issn>
    <eissn>1654-7209</eissn>
    <updated>2013-05-10T12:00:00+00:00</updated>
